<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VideoDetailsActivity">

    <LinearLayout
        android:id="@+id/ll_VideoInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="5dp"

        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_DetailName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="1dp"
            android:text="Video_Name"

            android:textStyle="bold"
            android:textSize="18dp"
            />

        <TextView
            android:id="@+id/tv_DetailDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="1dp"
            android:text="Video_Description"
            />

        <TextView
            android:id="@+id/tv_DetailURL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="1dp"
            android:text="Video_Url"
            />

        <TextView
            android:id="@+id/tv_DetailCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="1dp"
            android:text="Video_category"
            />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_VideoInfo"
        android:layout_margin="5dp"
        android:padding="15dp"

        android:text="Watch"
        />


</androidx.constraintlayout.widget.ConstraintLayout>